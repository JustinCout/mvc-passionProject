@model http5204_passion_project.Models.ViewModels.EditReview

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Review</h2>

<form method="POST" action="/Review/Edit/@Model.Reviews.ReviewId">
    <div class="form-group">
        <label>Title</label>
        <input id="ReviewTitle" value="@Model.Reviews.ReviewName" name="ReviewName" />
    </div>

    <div class="form-group">
        <label>Series (Where is it from?)</label>
        <input id="ReviewSeries" value="@Model.Reviews.ReviewSeries" name="ReviewSeries" />
    </div>

    <div class="form-group">
        <label>Category</label>
        <select value="@Model.Reviews.ReviewCategory" name="ReviewCategory">
            <option value="tv">TV Show</option>
            <option value="movie">Movie</option>
            <option value="game">Video Game</option>
            <option value="comic">Comic Book</option>
            <option value="book">Book</option>
        </select>
    </div>

    <div class="form-group">
        <label>Date</label>
        <input type="datetime-local" value="@Model.Reviews.ReviewDate" name="ReviewDate">
    </div>



    <div class="form-group">
        <label>Content</label>
        <textarea class="form-control" id="exampleTextarea" rows="10" style="height: 258px; width:500px;"
                  name="ReviewContent">@Model.Reviews.ReviewContent</textarea>
    </div>

    <input type="submit" id="submitBtn" class="btn btn-primary" value="Publish" />

</form>

