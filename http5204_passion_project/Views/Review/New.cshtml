@model IEnumerable<http5204_passion_project.Models.Author>

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Review</h2>

<form class="form-style" method="POST" action="/Review/Create">
    <div class="form-group">
        <label for="ReviewTitle">Title</label><br>
        <input id="ReviewTitle" name="new_ReviewName" class="form-control" placeholder="Enter title" />
    </div>

    <div class="form-group">
        <label for="ReviewSeries">Series</label><br>
        <input id="ReviewSeries" name="new_ReviewSeries" class="form-control" placeholder="Where is it from?"/>
    </div>

    <div class="form-group">
        <label for="AuthorAlias">Author</label><br>
        <select id="AuthorAlias" class="custom-select" name="Authors_AuthorId">
            @foreach (var author in Model)
            {
                <option value="@author.AuthorId">@author.AuthorAlias</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="ReviewCategory">Category</label><br>
        <select id="ReviewCategory" class="custom-select" name="new_ReviewCategory">
            <option value="TV Shows">TV Shows</option>
            <option value="Movies">Movies</option>
            <option value="Video Games">Video Games</option>
            <option value="Board Games">Board Games</option>
            <option value="Comics">Comics</option>
            <option value="Books">Books</option>
        </select>
    </div>

    <div class="form-group">
        <label for="datetime">Date</label><br>
        <input  id="datetime" type="date" class="form-control" name="new_ReviewDate" placeholder="Select date">
    </div>



    <div class="form-group">

        <label for="Textarea">Content</label>
        <img id="dk" src="~/images/dk.png" />
        <textarea class="form-control" id="Textarea" rows="15" name="new_ReviewContent" placeholder="Write your review"></textarea>

    </div>

    <input type="submit" id="submitBtn" class="btn btn-primary" value="Create" />

</form>

